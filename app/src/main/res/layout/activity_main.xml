<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@color/preto">
    <TextView
            android:text="@string/texto1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:textSize="24sp"
            android:textColor="@color/branco"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp" android:layout_marginRight="20dp" android:gravity="center"
            android:layout_marginTop="25dp" app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <SeekBar
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/seekBar"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/txtValorGasolina" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp" android:layout_marginRight="20dp" android:background="@color/corSeekBar"/>
    <TextView
            android:text="R$ 0,00"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtValorGasolina" android:textSize="24sp" android:textStyle="bold"
            android:textColor="@color/branco"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp" android:layout_marginRight="20dp" android:gravity="center"
            android:layout_marginTop="25dp" app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtResultado" android:textSize="18sp"
            android:text="Use a Barra para Selecionar o Valor da Gasolina." android:textColor="@color/branco"
            android:layout_marginTop="25dp" app:layout_constraintTop_toBottomOf="@+id/btnCalcular"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp" android:layout_marginRight="20dp" android:gravity="center"/>
    <Button
            android:text="@string/textBtnCalcular"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/btnCalcular"
            android:background="@color/vermelha"
            android:textColor="@color/branco" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="40dp" android:layout_marginStart="40dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp" android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/seekBar" android:textSize="24sp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="192dp" app:srcCompat="@drawable/logo"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp" android:layout_marginRight="20dp"/>
</android.support.constraint.ConstraintLayout>